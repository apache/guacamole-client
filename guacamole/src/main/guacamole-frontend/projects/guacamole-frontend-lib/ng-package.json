{
    "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
    "dest": "../../dist/guacamole-frontend-lib",
    "lib": {
        "entryFile": "src/public-api.ts"
    },
    "assets": [
        {
            "glob": "**/*",
            "input": "src/assets",
            "output": "assets"
        },
        {
            "glob": "**/*.css",
            "input": "src/lib",
            "output": "assets/styles"
        }
    ]
}
