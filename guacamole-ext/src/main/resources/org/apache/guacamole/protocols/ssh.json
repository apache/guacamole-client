                {
                    "name"  : "recording-name",
                    "type"  : "TEXT"
                },
                {
                    "name"  : "create-recording-path",
                    "type"  : "BOOLEAN",
                    "options" : [ "true" ]
                }
            ]
        },

        {
            "name"  : "sftp",
            "fields" : [
                {
                    "name"    : "enable-sftp",
                    "type"    : "BOOLEAN",
                    "options" : [ "true" ]
                },
                {
                    "name"  : "sftp-root-directory",
                    "type"  : "TEXT"
                }
            ]
